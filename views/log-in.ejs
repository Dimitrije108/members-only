<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Log In</title>
</head>
<body>
  <h1>Log In</h1>
  <form action="/auth/log-in" method="POST">
    <label for="email">Email</label>
    <input id="email" name="email" placeholder="e.g. user123@gmail.com" type="email" />
    <label for="password">Password</label>
    <input id="password" name="password" type="password" />
    <button type="submit">Log In</button>
  </form>
  <!-- Validation errors -->
  <%- include('partials/validationErr.ejs') %>
  <!-- Authentication error -->
  <% if (message && message.length > 0) { %>
    <div class="error"><%= message[0] %></div>
  <% } %>
</body>
</html>